{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./index.ts",
    "./auth": "./lib/auth.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "predev": "pnpm --filter @repo/email build",
    "dev": "tsx watch --env-file=../../.env --env-file=../../.env.local ./dev.ts",
    "build": "esbuild index.ts --outdir=dist --bundle --platform=node --format=esm",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "deploy": "wrangler deploy --env-file ../../.env --env-file ../../.env.local",
    "logs": "wrangler tail --env-file ../../.env --env-file ../../.env.local"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.2",
    "@better-auth/passkey": "^1.4.5",
    "@repo/core": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/email": "workspace:*",
    "@trpc/server": "^11.7.2",
    "ai": "^6.0.5",
    "better-auth": "^1.4.5",
    "dataloader": "^2.2.3",
    "drizzle-orm": "^0.45.0",
    "postgres": "^3.4.7",
    "resend": "^6.5.2"
  },
  "peerDependencies": {
    "hono": "^4.10.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251205.0",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^25.0.3",
    "esbuild": "^0.27.2",
    "hono": "^4.10.7",
    "tsx": "^4.19.4",
    "typescript": "~5.9.3",
    "vitest": "~4.0.15",
    "wrangler": "^4.53.0",
    "zod": "^4.1.13"
  }
}
